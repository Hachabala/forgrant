<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Exchange</title>
    <link rel="stylesheet" href="css/style.css">
	<link href="//fonts.googleapis.com/css?family=Roboto:400,500,600,700">
    <script src="js/script.js"></script>
</head>
<body>
    <div class="exchange">
        <div class="exchange__container">
            <div class="exchange__header">
                <div class="exchange__header-text">
                    Select currency to exhange:
                </div>
                <div class="exchange__header-select">
                    <select name="" id="currency">
                        <option value="USD">USD</option>
                        <option value="EUR">EUR</option>
                        <option value="RUB">RUB</option>
                        <option value="GBP">GBP</option>
                    </select>
                </div>
            </div>
            <div class="exchange__crypts">
                <div class="crypt-item crypt-item__eth" id="eth">
                    <div class="crypt-item__title">Ethereum</div>
                    <div class="crypt-item__image"></div>
                    <div class="crypt-item__price">
                        Price:
                        <div class="crypt-item__price-value"></div>
                    </div>
                    <div class="crypt-item__changes">
                        <div class="crypt-item__changes-title">
                            Percent change
                            <div class="crypt-item__checker">
                                <label class="checkbox">
                                    <input type="checkbox" name="" id="">
                                    <span class="checkbox-indicator"></span>
                                </label>
                            </div>
                        </div>
                        <div class="crypt-item__changes-line">
                            Hour change
                            <div class="crypt-item__changes-value" data-change="hour"></div>
                        </div>
                        <div class="crypt-item__changes-line">
                            Day change
                            <div class="crypt-item__changes-value" data-change="day"></div>
                        </div>
                        <div class="crypt-item__changes-line">
                            Week change
                            <div class="crypt-item__changes-value" data-change="week"></div>
                        </div>
                        <div class="crypt-item__changes-line">
                            Month change
                            <div class="crypt-item__changes-value" data-change="month"></div>
                        </div>
                    </div>
                </div>
                <div class="crypt-item crypt-item__ltc" id="ltc">
                    <div class="crypt-item__title">Litecoin</div>
                    <div class="crypt-item__image"></div>
                    <div class="crypt-item__price">
                        Price:
                        <div class="crypt-item__price-value"></div>
                    </div>
                    <div class="crypt-item__changes">
                        <div class="crypt-item__changes-title">
                            Percent change
                            <div class="crypt-item__checker">
                                <label class="checkbox">
                                    <input type="checkbox" name="" id="">
                                    <span class="checkbox-indicator"></span>
                                </label>
                            </div>
                        </div>
                        <div class="crypt-item__changes-line">
                            Hour change
                            <div class="crypt-item__changes-value" data-change="hour"></div>
                        </div>
                        <div class="crypt-item__changes-line">
                            Day change
                            <div class="crypt-item__changes-value" data-change="day"></div>
                        </div>
                        <div class="crypt-item__changes-line">
                            Week change
                            <div class="crypt-item__changes-value" data-change="week"></div>
                        </div>
                        <div class="crypt-item__changes-line">
                            Month change
                            <div class="crypt-item__changes-value" data-change="month"></div>
                        </div>
                    </div>
                </div>

                <div class="crypt-item crypt-item__btc" id="btc">
                    <div class="crypt-item__title">Bitcoin</div>
                    <div class="crypt-item__image"></div>
                    <div class="crypt-item__price">
                        Price:
                        <div class="crypt-item__price-value"></div>
                    </div>
                    <div class="crypt-item__changes">
                        <div class="crypt-item__changes-title">
                            Percent change
                            <div class="crypt-item__checker">
                                <label class="checkbox">
                                    <input type="checkbox" name="" id="">
                                    <span class="checkbox-indicator"></span>
                                </label>
                            </div>
                        </div>
                        <div class="crypt-item__changes-line">
                            Hour change
                            <div class="crypt-item__changes-value" data-change="hour"></div>
                        </div>
                        <div class="crypt-item__changes-line">
                            Day change
                            <div class="crypt-item__changes-value" data-change="day"></div>
                        </div>
                        <div class="crypt-item__changes-line">
                            Week change
                            <div class="crypt-item__changes-value" data-change="week"></div>
                        </div>
                        <div class="crypt-item__changes-line">
                            Month change
                            <div class="crypt-item__changes-value" data-change="month"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>